@page
@model IndexModel
@{
    ViewData["Title"] = "Inicie Sesion";
}


<link rel="stylesheet" href="~/css/botones.css" />
<body id="Indexo">
    <div class="background"><div class="blur"></div></div>
    <div class="d-flex justify-content-center centrado">
        <div class="shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card" style="width: 30rem">
                <img src="~/Images/placeholder-e-kay.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <center>
                        <h2 class="card-title">Iniciar Sesión</h2>
                    </center>
                    <form method="post" class="d-flex justify-content-center" enctype="multipart/form-data">
                        <div class="d-flex justify-content-center" style="width: 28rem;">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <span class="text-danger" asp-validation-for="CuentaRequest.Usuario"></span>
                                    <div class="form-group">
                                        <input type="text" asp-for="CuentaRequest.Usuario" class="form-control" role="textbox" placeholder="Correo" required>
                                    </div>
                                    <span class="text-danger" asp-validation-for="CuentaRequest.Contrasenia"></span>
                                    <div class="form-group d-flex justify-content-center">
                                        <input type="password" asp-for="CuentaRequest.Contrasenia" class="form-control" role="textbox" placeholder="Contraseña" required>
                                    </div>
                                    <div>
                                        <input type="radio" id="recuerdame" />
                                        <label for="recuerdame">Recordarme</label>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btnf">Iniciar Sesion</button>
                                    </div>

                                </li>
                            </ul>
                        </div>
                    </form>
                    <div class="d-flex justify-content-end">
                        <a asp-page="#">¿Contraseña olvidada?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script>
                const url = "https://localhost:44321/api/cuenta"
                const $formulario = document.querySelector('#InicioSesion')

                $formulario.addEventListener('sumbit', (e) => {
                    e.preventDefault();

                    fetch(url, {
                        method:'GET',
                    })
                        .then(res => res.json())


                })
        </script>

    }

</body>